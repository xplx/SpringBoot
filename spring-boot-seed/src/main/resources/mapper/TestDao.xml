<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.seed.dao.TestDao">

    <resultMap type="com.example.seed.entity.Test" id="TestMap">
        <result property="id" column="ID" jdbcType="INTEGER"/>
        <result property="name" column="Name" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TestMap">
        select
          ID, Name
        from test.test
        where ID = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TestMap">
        select
          ID, Name
        from test.test
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TestMap">
        select
          ID, Name
        from test.test
        <where>
            <if test="id != null">
                and ID = #{id}
            </if>
            <if test="name != null and name != ''">
                and Name = #{name}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into test.test(Name)
        values (#{name})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update test.test
        <set>
            <if test="name != null and name != ''">
                Name = #{name},
            </if>
        </set>
        where ID = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from test.test where ID = #{id}
    </delete>

</mapper>